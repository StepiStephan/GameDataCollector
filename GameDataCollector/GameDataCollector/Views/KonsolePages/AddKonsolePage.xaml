<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GameDataCollector.Views.AddKonsolePage">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="KonsolenTyp:"
                VerticalOptions="Center" 
                HorizontalOptions="Start" />
            <Editor Placeholder="Switch OLED"
                    x:Name="konsoleTyp"/>
            <Label Text="KonsolenName:"
                VerticalOptions="Center" 
                HorizontalOptions="Start" />
            <Editor Placeholder="Neue Switch"
                    x:Name="konsoleName"/>
            <Label Text="Speichergröße in GB:"
                VerticalOptions="Center" 
                HorizontalOptions="Start" />
            <Editor Placeholder="64"
                    x:Name="speicherGB"
                    Keyboard="Numeric"/>
            <Button Text="Speichern" 
                    VerticalOptions="End"
                    HorizontalOptions="Center"
                    x:Name="saveButton"/>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>