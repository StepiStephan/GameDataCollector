<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GameDataCollector.Views.FireBaseControllPages.FireBaseSaveLoadPage">
    <ContentPage.Content>
        <StackLayout Padding="10"
                     x:Name="saveLoadArea">
            <FlexLayout>
                <Button Text="Speichern" x:Name="save"/>
                <Button Text="Laden" x:Name="load"
                        TranslationX="10"/>
            </FlexLayout>
            <ActivityIndicator 
                IsVisible="false" 
                IsRunning="False" 
                Color="Red"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="CenterAndExpand"
                x:Name="spinner"/>
            <Entry IsReadOnly="True"
                   TextColor="Green"
                   VerticalOptions="CenterAndExpand"
                   HorizontalOptions="CenterAndExpand"
                   Text="Erfolgreich Geladen"
                   x:Name="result"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>