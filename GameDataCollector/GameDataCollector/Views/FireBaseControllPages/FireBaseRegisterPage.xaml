<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GameDataCollector.Views.FireBaseControllPages.FireBaseRegisterPage">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Label Text="Email:"/>
            <Entry x:Name="email"
                   BackgroundColor="LightGray"/>
            <Label Text="Passwort:"/>
            <Entry x:Name="passwort" 
                   IsPassword="True"
                   BackgroundColor="LightGray"/>
            <Label Text="Passwort Widerholen:"/>
            <Entry x:Name="passwortSecond" 
                   IsPassword="True"
                   BackgroundColor="LightGray"/>
            <Button Text="Registrieren" 
                    x:Name="register"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>