<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GameDataCollector.Views.MoveStoragePage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Konsole alt:"/>
            <Picker Title="Konsole auswählen" 
                    x:Name="konsoleAlt"/>
            <Label Text="Speicherkarte:"/>
            <Picker Title="Speicherkarte auswählen" 
                    x:Name="storage"/>
            <Label Text="Konsole neu:"/>
            <Picker Title="Konsole auswählen" 
                    x:Name="konsoleNeu"/>
            <Button Text="Speichern"
                    x:Name="saveButton"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>